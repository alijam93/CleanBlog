@page "/articles"
@using CleanBlog.Components.Pagination
@inject IPostService PostService
@inject HttpClient http
@inject NavigationManager navigation


@if (Posts == null)
{
    <Spinner />
}
else
{
    <div class="d-flex flex-nowrap ms-5 pt-3">
        <div>
            <p class="badge bg-light text-dark shadow-sm text-center">
                <strong class="h6">
                    <i class="bi bi-tags-fill pr-1"></i>
                    tags
                </strong>
            </p>
        </div>
        <div>
            <button type="button" class="btn btn-dark btn-sm mr-2 ml-2" 
                    @onclick="() => GetPostByTag(null)">All</button>
            @foreach (var tag in Tags)
            {
                <button type="button" class="btn btn-outline-secondary btn-sm mr-2"
                        @onclick="() => GetPostByTag(tag.Name)">
                    @tag.Name
                </button>
            }
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2">
        @foreach (var post in Posts)
        {
            <div class="col mb-4">
                <div class="article-card">
                    @if (!string.IsNullOrEmpty(post.Image))
                    {
                        <img src="@post.Image" class="article-img" loading="lazy" />
                    }
                    else
                    {
                        <div class="article-img"></div>
                    }
                    <div class="article-body">
                        <div class="article-title">
                            <h5>
                                <a href="@($"article/{post.Id}/{post.Slug}")">
                                    @post.Title
                                </a>
                            </h5>
                        </div>
                        <div class="card-text d-flex bd-highlight m-3">
                            <div class="mr-auto p-2 bd-highlight">
                            </div>
                            <div class="p-2 bd-highlight">
                                @foreach (var tag in post.Tags)
                                {
                                    <AntDesign.Tag Color="purple">
                                        <a href="@($"tag/{tag.Name}")">
                                            @tag.Name
                                        </a>
                                    </AntDesign.Tag>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row mt-5 justify-content-center">
        <PostPagination Url="articles" Paging="Paging" Spread="3" SelectedPage="SelectedPage" />
    </div>
}
